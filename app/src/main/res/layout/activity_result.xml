<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResultActivity">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="386dp"
        android:layout_height="59dp"
        android:background="@color/bgcolor"
        app:layout_constraintBottom_toTopOf="@+id/cardView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView"
            android:layout_width="75dp"
            android:layout_height="36dp"
            android:gravity="center"
            android:text="BEEMI"
            android:textColor="@color/textcolor"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="@font/bahnschriftnormal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <ScrollView
        android:id="@+id/scrollablContent"
        android:layout_width="390dp"
        android:layout_height="402dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/constraintLayout2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/constraintLayout">

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="291dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/Gauge"
                        android:layout_width="match_parent"
                        android:layout_height="204dp"
                        android:src="@drawable/beemi" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bahnschrift"
                        android:gravity="center"
                        android:text=" Honeycomb buzzes your BMI is..."
                        android:textColor="@color/cardcolor"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="10dp" />

                    <TextView
                        android:id="@+id/Result"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bahnschrift"
                        android:gravity="center"
                        android:text="Result"
                        android:textColor="@color/cardcolor"
                        android:textStyle="bold" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="11dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/Age"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bahnschrift"
                            android:gravity="center"
                            android:text=" Age "
                            android:textColor="@color/cardcolor"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Height"
                            android:layout_width="40dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bahnschrift"
                            android:gravity="center"
                            android:text="| Height"
                            android:textColor="@color/cardcolor"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Weight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:fontFamily="@font/bahnschrift"
                            android:gravity="center"
                            android:text="| Weight"
                            android:textColor="@color/cardcolor"
                            android:textStyle="bold" />
                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="291dp"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="34dp"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/textView12"
                            android:layout_width="290dp"
                            android:layout_height="33dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/bahnschrift"
                            android:text="Honeycomb's Recommendation"
                            android:textColor="@color/cardcolor"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView8"
                            android:layout_width="55dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/icon" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />

                    <ImageButton
                        android:id="@+id/Recommendation"
                        android:layout_width="match_parent"
                        android:layout_height="198dp"
                        android:background="@null"
                        android:onClick="clickLink"
                        android:src="@drawable/beemi" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/FoodName"
                            android:layout_width="387dp"
                            android:layout_height="40dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/bahnschrift"
                            android:gravity="center"
                            android:text="Food Name"
                            android:textColor="@color/cardcolor"
                            android:textStyle="bold" />

                    </LinearLayout>

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="375dp"
                android:layout_height="296dp"
                android:layout_margin="10dp"
                app:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/textView13"
                            android:layout_width="312dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/bahnschrift"
                            android:text="Honeycomb's Nutrient Chart"
                            android:textColor="@color/cardcolor"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView4"
                            android:layout_width="55dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/icon"
                            tools:layout_editor_absoluteX="111dp"
                            tools:layout_editor_absoluteY="415dp" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/Nutrients"
                        android:layout_width="match_parent"
                        android:layout_height="311dp"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/batss" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="294dp"
                android:layout_margin="10dp"
                card_view:cardCornerRadius="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="73dp"
                        android:orientation="horizontal">

                        <TextView

                            android:id="@+id/textView2"
                            android:layout_width="312dp"
                            android:layout_height="35dp"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/bahnschrift"
                            android:text="Honeycomb's Suggestion"
                            android:textColor="@color/cardcolor"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imageView3"
                            android:layout_width="55dp"
                            android:layout_height="35dp"
                            android:layout_weight="1"
                            android:src="@drawable/icon" />

                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="135dp"
                        android:layout_weight="1"
                        android:orientation="horizontal"
                        tools:layout_height="35dp">

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="3dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/bahnschrift"
                            android:text="Your BMI is "
                            android:textColor="@color/cardcolor"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/Evaluation"
                            android:layout_width="156dp"
                            android:layout_height="63dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/bahnschrift"
                            android:text="Result"
                            android:textColor="@color/bgcolor"
                            android:textSize="30sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView11"
                            android:layout_width="212dp"
                            android:layout_height="33dp"
                            android:layout_marginLeft="5dp"
                            android:fontFamily="@font/bahnschrift"
                            android:layout_weight="1"
                            android:text="I suggest you might like this other meals as well"
                            android:textColor="@color/cardcolor"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/Link1"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:fontFamily="@font/bahnschrift"
                            android:onClick="clickExtraLink1"
                            android:text="Link 1"
                            android:textColor="#828fe1" />

                        <TextView
                            android:id="@+id/Link2"
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:fontFamily="@font/bahnschrift"
                            android:onClick="clickExtraLink2"
                            android:text="Link 2"
                            android:textColor="#828fe1" />
                    </LinearLayout>

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/checklist"
                android:layout_width="266dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="72dp"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/mybutton"
                android:fontFamily="@font/bahnschrift"
                android:onClick="onBack"
                android:text="BACK TO THE BEEHIVE"
                android:textAppearance="@style/TextAppearance.AppCompat.Button"
                android:textColor="#fde694"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </LinearLayout>
    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/constraintLayout2"
        android:layout_width="wrap_content"
        android:layout_height="59dp"
        android:background="@color/bgcolor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent">

    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>